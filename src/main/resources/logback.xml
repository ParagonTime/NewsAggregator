<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Отключаем статусные логи Logback -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    
    <!-- Аппендер для файла приложения -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <!-- Отключаем буферизацию для немедленной записи -->
        <immediateFlush>true</immediateFlush>
        <!-- Принудительная запись при каждом событии -->
        <prudent>false</prudent>
    </appender>

    <!-- Корневой логгер - только в файл -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>

    <!-- Логгеры для приложения - только в файл -->
    <logger name="com.simpleproject.NewsAggregator" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Отключаем Hibernate SQL логи -->
    <logger name="org.hibernate.SQL" level="OFF" additivity="false"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF" additivity="false"/>
    
    <!-- Настройки для Spring, Hibernate, Netty и JVM - только в файл -->
    <logger name="org.springframework" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="io.netty" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="sun.misc.Unsafe" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>
</configuration>